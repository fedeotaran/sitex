<header>
  <nav>
    <ul>
      <li><strong><%= @site_title %></strong></li>
    </ul>
    <ul>
      <%= for section <- @pages do %>
        <li><a href="<%= "#{section.url}" %>"><%= section.title %></a></li>
      <% end %>
    </ul>
  </nav>
</header>

<main>
  <article>
    <header>
      <hgroup>
        <h1>Home</h1>
      </hgroup>
    </header>

    <section>
      <%= @inner_body %>
    </section>

    <%= if length(@posts) > 0  do %>
      <section>
        <h2>Latest posts</h2>
        <ul>
          <%= for post <- Enum.take(@posts, 5) do %>
            <li>
              <a href="<%= "#{post.url}" %>">
                <time><%= post.date %></time>
                <strong><%= post.title %></strong>
              </a>
            </li>
          <% end %>
        </ul>
      </section>
    <% end %>
  </article>
</main>

<footer>
  <p>
    <small>
      Â© <%= DateTime.utc_now().year %> - All rights reserved
    </small>
  </p>
</footer>
