<html>
  <head>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.css">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.css">
    <title><%= @title %></title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="column">
          <h1><%= @title %></h1>
        </div>
        <hr>
      </div>
      <div class="row">
        <div class="column">
          <ul>
            <%= for section <- @sections do %>
              <li>
                <a href="<%= "#{section.slug}/" %>">
                  <%= section.title %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <%= @content %>
        </div>
      </div>
      <div class="row">
        <div class="column">Footer</div>
      </div>
    </div>
  </body>
</html>
